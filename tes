<script>
    let selectedAttendance = null;

    function selectAttendance(type, button) {
        // Hapus semua active
        document.querySelectorAll('.attendance-btn').forEach(btn => {
            btn.classList.remove('active');
        });

        // Tambahkan active ke tombol dipilih
        button.classList.add('active');
        selectedAttendance = type;
    }

    function submitRSVP() {
        const name = document.getElementById('nameInput').value.trim();
        const responseDiv = document.getElementById('responseDisplay');

        if (!name) {
            alert('Mohon isi nama kamu terlebih dahulu! ğŸ˜Š');
            return;
        }

        if (!selectedAttendance) {
            alert('Mohon pilih apakah kamu akan hadir atau tidak! ğŸ˜Š');
            return;
        }

        const attendanceText = selectedAttendance === 'hadir' ? 'HADIR âœ…': 'TIDAK HADIR âŒ';
        const message = `Halo! Ini konfirmasi untuk undangan makan-makan:

        ğŸ‘¤ Nama: ${name}
        ğŸ“… Acara: Makan-makan di RameNations Palembang
        ğŸ—“ï¸ Tanggal: Selasa, 09 September 2025
        ğŸ• Waktu: 15.30 WIB
        ğŸ“ Status: ${attendanceText}

        ${selectedAttendance === 'hadir' ? 'Terima kasih, sampai jumpa di sana! ğŸ˜Š': 'Terima kasih sudah memberitahu, next time ya! ğŸ˜Š'}`;

        const phoneNumber = '6281374675020';
        const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;

        responseDiv.innerHTML = `
        <strong>Konfirmasi berhasil!</strong><br>
        Nama: ${name}<br>
        Status: ${attendanceText}<br><br>
        <a href="${whatsappUrl}" target="_blank" style="color: #667eea; text-decoration: none; font-weight: 600;">
        ğŸ“± Klik untuk kirim via WhatsApp â†’
        </a>
        `;
        responseDiv.style.display = 'block';
    }
</script>
